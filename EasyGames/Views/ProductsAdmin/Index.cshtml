@model IEnumerable<EasyGames.Models.Product>

@{
    ViewData["Title"] = "Stock Management";
}

<h1>Stock Management</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>

            <!-- New finance columns -->
            <th>Source</th>
            <th>Buy Price</th>
            <th>Sell Price</th>
            <th>Margin</th>

            <th>@Html.DisplayNameFor(model => model.StockQty)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Name)</td>
                <td>@Html.DisplayFor(_ => item.Category)</td>
                <td>@Html.DisplayFor(_ => item.Description)</td>

                <!--New finance fields -->
                <td>@item.Source</td>
                <td>@item.BuyPrice.ToString("C")</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    @item.MarginPerUnit.ToString("C")
                    (@item.MarginPercent.ToString("0.##")%)
                </td>

                <td>@Html.DisplayFor(_ => item.StockQty)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Image" width="80" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>@(item.UpdatedAt?.ToShortDateString() ?? "—")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model EasyGames.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded border" />
        }
        else
        {
            <div class="text-muted">No image</div>
        }
    </div>

    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Category)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Category)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Description)</dd>

            <!-- NEW: finance fields -->
            <dt class="col-sm-3">Source</dt>
            <dd class="col-sm-9">@Model.Source</dd>

            <dt class="col-sm-3">Buy Price</dt>
            <dd class="col-sm-9">@Model.BuyPrice.ToString("C")</dd>

            <dt class="col-sm-3">Sell Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Margin</dt>
            <dd class="col-sm-9">
                @Model.MarginPerUnit.ToString("C") (@Model.MarginPercent.ToString("0.##")%)
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.StockQty)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.StockQty)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime()</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.UpdatedAt)</dt>
            <dd class="col-sm-9">@((Model.UpdatedAt?.ToLocalTime().ToString() ?? "—"))</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

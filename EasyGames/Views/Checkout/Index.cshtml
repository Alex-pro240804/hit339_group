@model IEnumerable<EasyGames.Models.CartItem>
@{
    ViewData["Title"] = "Checkout";
    var total = Model.Sum(x => (x.Product?.Price ?? 0m) * x.Quantity);
}
<h1>Checkout</h1>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Product?.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Product?.Price ?? 0m * item.Quantity).ToString("C"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total</th>
                <th>@total.ToString("C")</th>
            </tr>
        </tfoot>
    </table>

    <form asp-action="Confirm" method="post">
        <button type="submit" class="btn btn-success">Place Order</button>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Back to Cart</a>
    </form>
}
